{
  "name": "nxd/marathonmanager",
  "description": "Marathon Manager for Joomla! 4.x and never",
  "minimum-stability": "stable",
  "license": "GPL-3.0-or-later",
  "authors": [
    {
      "name": "Marco Rensch",
      "homepage": "https://www.nx-designs.ch",
      "role": "Lead Developer"
    }
  ],
  "config": {
    "vendor-dir": "administrator/components/com_marathonmanager/vendor",
    "platform": {
      "php": "8.3"
    }
  },
  "require": {
    "php": ">=8.3",
    "phpoffice/phpspreadsheet": ">=5.1.0",
    "ext-simplexml": "*"
  },
  "scripts": {
    "post-install-deploy": [
      "rm -rf vendor",
      "composer clear-cache",
      "composer install --no-dev --optimize-autoloader"
    ],
    "deploy-zip": [
      "mkdir -p dist",
      "zip -r dist/com_marathonmanager.zip . -x 'composer.*' -x '*.DS_Store' -x '*.git*' -x 'Thumbs.db' -x 'node_modules/*' -x 'vendor/bin/*' -x '.idea' -x '.idea/*' -x '*/.idea' -x '*/.idea/*' '*/.gitignore' -x 'dist/*' -x '*.zip'"
    ]
  }
}