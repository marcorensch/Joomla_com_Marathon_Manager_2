<?xml version="1.0" encoding="UTF-8" ?>
<form
        addruleprefix="NXD\Component\MarathonManager\Administrator\Rule"
        addformprefix="NXD\Component\MarathonManager\Administrator\Form"
        addfieldprefix="NXD\Component\MarathonManager\Administrator\Field"
>
    <fieldset name="edit">
        <field
                name="id"
                type="number"
                label="JGLOBAL_FIELD_ID_LABEL"
                description="JGLOBAL_FIELD_ID_DESC"
                readonly="true"
                class="readonly"
                default="0"
        />


        <field
                name="access"
                type="accesslevel"
                label="JFIELD_ACCESS_LABEL"
                description="JFIELD_ACCESS_DESC"
                size="1"
        />

        <field
                name="published"
                type="list"
                label="JSTATUS"
                default="1"
                id="published"
                class="custom-select-color-state"
                size="1"
        >
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
            <option value="2">JARCHIVED</option>
            <option value="-2">JTRASHED</option>
        </field>

        <field
                name="created_by"
                type="user"
                label="JGLOBAL_FIELD_CREATED_BY_LABEL"
                readonly="true"
                class="readonly"
                filter="unset"
        />
        <field
                name="modified_by"
                type="user"
                label="JGLOBAL_FIELD_MODIFIED_BY_LABEL"
                readonly="true"
                class="readonly"
                filter="unset"
        />

        <field name="created"
               label="COM_MARATHONMANAGER_CREATED_DATE"
               type="calendar"
               translateformat="true"
               showtime="true"
               size="22"
               readonly="true"
               filter="user_utc" />

        <field name="modified"
               label="COM_MARATHONMANAGER_MODIFIED_DATE"
               type="calendar"
               translateformat="true"
               showtime="true"
               size="22"
               readonly="true"
               filter="user_utc" />

    </fieldset>
    <fieldset name="import">
        <field name="event_id"
               type="events"
               label="COM_MARATHONMANAGER_FIELD_EVENT_LABEL"
               required="true"
               multiple="false"
               direction="desc"
               layout="joomla.form.field.list-fancy-select"
        />
        <field
                name="upload_file"
                type="file"
                label="COM_MARATHONMANAGER_FIELD_UPLOAD_LABEL"
                description="COM_MARATHONMANAGER_FIELD_UPLOAD_DESC"
                accept=".csv , .xls , .xlsx"
                size="20"
                required="true"
        />
    </fieldset>
</form>