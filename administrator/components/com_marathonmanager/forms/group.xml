<?xml version="1.0" encoding="UTF-8" ?>
<form>
    <fieldset
            addruleprefix="NXD\Component\MarathonManager\Administrator\Rule"
            addformprefix="NXD\Component\MarathonManager\Administrator\Form"
            addfieldprefix="NXD\Component\MarathonManager\Administrator\Field"
    >
        <field
                name="id"
                type="number"
                label="JGLOBAL_FIELD_ID_LABEL"
                description="JGLOBAL_FIELD_ID_DESC"
                readonly="true"
                class="readonly"
                default="0"
        />
        <field
                name="group_id"
                required="true"
                type="number"
                label="COM_MARATHONMANAGER_GROUP_ID_LABEL"
                description="COM_MARATHONMANAGER_GROUP_ID_DESC"
        />
        <field name="group_ids"
               type="list"
               label="COM_MARATHONMANAGER_FIELD_GROUP_IDS_LABEL"
               description="COM_MARATHONMANAGER_FIELD_GROUP_ID_DESC"
        />

        <field
                name="title"
                type="text"
                label="COM_MARATHONMANAGER_TITLE_LABEL"
                required="true"
                size="40"
        />
        <field
                name="alias"
                type="text"
                label="COM_MARATHONMANAGER_ALIAS_LABEL"
                description="COM_MARATHONMANAGER_ALIAS_DESC"
                size="40"
        />

        <field
                name="access"
                type="accesslevel"
                label="JFIELD_ACCESS_LABEL"
                description="JFIELD_ACCESS_DESC"
                size="1"
        />

        <field
                name="published"
                type="list"
                label="JSTATUS"
                default="1"
                id="published"
                class="custom-select-color-state"
                size="1"
        >
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
            <option value="2">JARCHIVED</option>
            <option value="-2">JTRASHED</option>
        </field>

        <field
                name="created_by"
                type="user"
                label="JGLOBAL_FIELD_CREATED_BY_LABEL"
                readonly="true"
                class="readonly"
                filter="unset"
        />
        <field
                name="modified_by"
                type="user"
                label="JGLOBAL_FIELD_MODIFIED_BY_LABEL"
                readonly="true"
                class="readonly"
                filter="unset"
        />
        <field
                name="ordering"
                type="ordering"
                label="JFIELD_ORDERING_LABEL"
                content_type="com_marathonmanager.arrivaloption"
        />

        <field name="created"
               label="COM_MARATHONMANAGER_CREATED_DATE"
               type="calendar"
               translateformat="true"
               showtime="true"
               size="22"
               readonly="true"
               filter="user_utc"/>

        <field name="modified"
               label="COM_MARATHONMANAGER_MODIFIED_DATE"
               type="calendar"
               translateformat="true"
               showtime="true"
               size="22"
               readonly="true"
               filter="user_utc"/>
    </fieldset>
</form>