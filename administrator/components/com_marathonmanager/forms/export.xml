<?xml version="1.0" encoding="UTF-8" ?>
<form>
    <fieldset
            addruleprefix="NXD\Component\MarathonManager\Administrator\Rule"
            addformprefix="NXD\Component\MarathonManager\Administrator\Form"
            addfieldprefix="NXD\Component\MarathonManager\Administrator\Field"
    >
        <field
                name="type"
                type="list"
                label="What"
                description="What should be done?"
        >
            <option value="registrations">Registrations</option>
        </field>

        <field name="event_id"
               showon="type:registrations"
               type="events"
               label="COM_MARATHONMANAGER_FIELD_EVENT_LABEL"
               required="true"
               onchange="eventChange(this.value);"

        />
        <field
                name="only_paid"
                type="radio"
                label="Only Paid"
                layout="joomla.form.field.radio.switcher"
                default="1"
        >
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>

        <field
                name="create_team_numbers"
                type="radio"
                label="Generate Team Numbers"
                layout="joomla.form.field.radio.switcher"
                default="0"
        >
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>
    </fieldset>
</form>